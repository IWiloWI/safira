RewriteEngine On

# Handle React Router - Domain zeigt bereits auf /safira/
RewriteBase /

# Direkte Datei-Anfragen erlauben
RewriteRule ^index\.html$ - [L]

# Statische Assets nicht umleiten
RewriteCond %{REQUEST_URI} !^/static/
RewriteCond %{REQUEST_URI} !^/images/
RewriteCond %{REQUEST_URI} !^/videos/
RewriteCond %{REQUEST_URI} !^/fonts/
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json|xml|txt)$

# API-Aufrufe nicht umleiten
RewriteCond %{REQUEST_URI} !^/api-fixed\.php

# Für alle anderen Anfragen (React Router Pfade) → index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [L]

# Spezifische React Router Pfade explizit handhaben
RewriteRule ^(menu|admin|analytics|qr|settings|tobacco)/?$ /index.html [L]
RewriteRule ^(menu/.*)$ /index.html [L]
RewriteRule ^(admin/.*)$ /index.html [L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# CORS Headers
Header always set Access-Control-Allow-Origin "http://test.safira-lounge.de"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

# Preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Cache-Control für statische Dateien
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
</FilesMatch>

# Prevent directory browsing
Options -Indexes

# Error pages
ErrorDocument 404 /index.html